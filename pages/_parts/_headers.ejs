        background-position: center center;
    }

    .gif-banner {
        background-image: linear-gradient(rgba(66, 66, 66, 0.37), rgba(66, 66, 66, 0.33)), url(/assets/imgs/hud_banner_1.gif);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
    }
    
    /*  hidden until hover over parent ---------------------------------------------------------------------- 
        - https://stackoverflow.com/questions/4502633/how-to-affect-other-elements-when-one-element-is-hovered
    */
    .showMyChild:hover .hiddenChild{
        display: block;
    }
    .hiddenChild {
        display: none;
    }
    /*  smartphones, touchscreens
        - https://ferie.medium.com/detect-a-touch-device-with-only-css-9f8e30fa1134
        - https://stackoverflow.com/questions/16550485/hide-div-tag-on-mobile-view-only
    */
    @media (hover: none) {
        .hiddenChild {
            display: block;
        }
    }
    /* END - hidden until hover --------------------------------------------------------------------------- */
</style>


