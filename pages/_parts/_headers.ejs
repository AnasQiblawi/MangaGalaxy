    .bg-gray {
        background-color: var(--mdb-gray-dark);
    }

    .gif-bg {
        background-image: linear-gradient(rgba(23, 22, 22, 0.37), rgba(23, 23, 23, 0.355)), url(/assets/imgs/water_waves.gif);
        background-size: cover;
